apiVersion: v1
kind: Pod
metadata:
  annotations:
    imageregistry: "https://ghcr.io"
  labels:
    app: $YML_MY_APP
  name: $YML_MY_NAME
spec:
  imagePullSecrets:
    - name: github-packages-read
  containers:
    - name: $YML_MY_NAME
      image: ghcr.io/${GITHUB_USER}/${YML_MY_NAME}:latest
      volumeMounts:
        - name: vm-root
          mountPath: /vm-root
      command: [ "sleep", "infinity" ]
  volumes:
    - name: vm-root
      hostPath:
        path: /